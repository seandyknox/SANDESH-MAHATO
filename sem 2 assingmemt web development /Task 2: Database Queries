Task 2: Database Queries
i. Create all normalized tables in SQL

-- Creating table for Customers
CREATE TABLE Customers (
  CustomerID INT PRIMARY KEY,
  FirstName VARCHAR(50),
  LastName VARCHAR(50),
  Address VARCHAR(100),
  MemberType VARCHAR(20),
  MembershipFee DECIMAL(10, 2),
  JoinDate DATE,
  DateOfBirth DATE
);

-- Creating table for Sessions
CREATE TABLE Sessions (
  SessionID INT PRIMARY KEY,
  SessionDay VARCHAR(20),
  StartTime TIME,
  EndTime TIME,
  SessionType VARCHAR(50),
  Floor INT,
  Price DECIMAL(10, 2)
);

-- Creating table for Staff
CREATE TABLE Staff (
  StaffID INT PRIMARY KEY,
  FirstName VARCHAR(50),
  LastName VARCHAR(50),
  Role VARCHAR(50)
);

-- Creating table for Bookings
CREATE TABLE Bookings (
  BookingID INT PRIMARY KEY,
  SessionID INT,
  CustomerID INT,
  Date DATE,
  Member BOOLEAN,
  Fee DECIMAL(10, 2),
  PrePaid BOOLEAN,
  FOREIGN KEY (SessionID) REFERENCES Sessions(SessionID),
  FOREIGN KEY (CustomerID) REFERENCES Customers(CustomerID)
);

-- Creating table for Machines
CREATE TABLE Machines (
  MachineID INT PRIMARY KEY,
  Game VARCHAR(50),
  Year INT,
  Floor INT
);

-- Creating table for Consoles
CREATE TABLE Consoles (
  ConsoleID INT PRIMARY KEY,
  Name VARCHAR(50),
  PEGI VARCHAR(10),
  Quantity INT
);

-- Creating table for Games
CREATE TABLE Games (
  GameID INT PRIMARY KEY,
  Name VARCHAR(50),
  PEGI VARCHAR(10),
  Console VARCHAR(20)
);

